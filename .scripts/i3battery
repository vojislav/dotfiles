#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ğŸ”Œ for plugged up, ğŸ”‹ for discharging on battery, etc.).

case $BLOCK_BUTTON in
    3) notify-send "ğŸ”‹ Battery module" "ğŸ”‹: discharging
ğŸ›‘: not charging
ğŸ”Œ: charging
âš¡: charged
â—: battery very low!" ;;
esac

# Loop through all attached batteries.
for battery in /sys/class/power_supply/BAT?
do
	# Get its remaining capacity and charge status.
	capacity=$(cat "$battery"/capacity) || break

	status=$(sed "s/Discharging/ğŸ”‹/;s/Not charging/ğŸ›‘/;s/Charging/ğŸ”Œ/;s/Full/âš¡/" "$battery"/status)

	time=$(upower -i /org/freedesktop/UPower/devices/battery_BAT0 | grep "time" | awk {'print $4$5'} | sed "s/hours/ h/;s/minutes/ m/")
	[ "$time" ] && time=$(echo "($time)")

	[ $(echo $status | grep Unknown) ] && [ "$capacity" -ge 95 ] && capacity=100 && status="âš¡"

	# If it is discharging and 25% or less, we will add a â— as a warning.
	[ "$capacity" -le 25 ] && [ "$status" = "ğŸ”‹" ] && warn="â—"

	printf "%s%s%s%% %s\n" "$status" "$warn" "$capacity" "$time"
	unset warn
done
